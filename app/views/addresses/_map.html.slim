    document.addEventListener('DOMContentLoaded', function(){ 
        document.querySelector('form #address_address_line_1').onblur = add_marker;
        add_marker(); // set initial marker
    }, false);

    // create markers and set that sidebar opens and closes when click on marker
    function add_marker() {
        var nomatim_url     = "https://nominatim.openstreetmap.org";
        var address_line_1  = $('form #address_address_line_1').val();
        var address_line_2  = $('form #address_address_line_2').val();
        var zip             = $('form #address_zip').val();
        var city            = $('form #address_city').val();
        // do we need the country?

        var address_nomatim = [address_line_1,address_line_2, zip, city].join("+");
        console.log(address_nomatim);
    
        $.ajax({
            url:nomatim_url+"/search?q="+address_nomatim+"&format=json",
            type: "GET",
            dataType: "json",
            success:function(res) {
                var latitude  = res[0].lat;
                var longitude = res[0].lon;
                var coordinates = [latitude, longitude];

                if ( latitude > 0 && longitude > 0 ) {

                    // remove old marker
                    if(typeof marker !== "undefined") {
                        map.removeLayer(marker)
                    }
                
                    marker = L.marker(coordinates)
                    marker.addTo(map);
                    map.setView(coordinates, 12);
                }
            }
        });
    }